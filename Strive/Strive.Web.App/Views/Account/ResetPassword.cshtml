@model Strive.Web.App.ViewModels.Account.ResetPasswordViewModel

<h2 class="text-center mt-4 mb-4">@Localizer["Header"]</h2>

<div class="row d-flex justify-content-center">
    <div class="col-lg-4 col-md-6 col-sm-12 col-12">
        <div class="p-lg-3 p-md-2 p-sm-1 p-1">
            <form method="post"
                  asp-controller="Account"
                  asp-action="ResetPassword">
                <input type="hidden"
                       asp-for="Token" />

                <div class="form-group">
                    <label class="font-weight-bold">@SharedLocalizer["Account-Label-Email"]</label>
                    <input type="text"
                           readonly
                           class="form-control-plaintext"
                           asp-for="Email" />
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@SharedLocalizer["Account-Label-NewPassword"]</label>
                    <input type="password"
                           class="form-control"
                           placeholder="@SharedLocalizer["Account-Placeholder-NewPassword"]"
                           asp-for="NewPassword" />
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@SharedLocalizer["Account-Label-NewPasswordConfirm"]</label>
                    <input type="password"
                           class="form-control"
                           placeholder="@SharedLocalizer["Account-Placeholder-NewPasswordConfirm"]"
                           asp-for="NewPasswordConfirm" />
                </div>

                <input type="submit"
                       value="@Localizer["Text-ChangePassword"]"
                       class="btn btn-success col" />
            </form>
        </div>
    </div>
</div>
