@model Strive.Web.App.ViewModels.Account.RegisterViewModel

<form method="post"
	  asp-controller="Account"
	  asp-action="Register"
	  asp-antiforgery="true">

	@await Html.PartialAsync("~/Views/Shared/Partial/Forms/ValidationErrorsSummary.cshtml")

	<div class="form-group">
		<label class="font-weight-bold"
			   asp-for="UserName">
		</label>
		<span>*</span>
		<input type="text"
			   placeholder="@SharedLocalizer["Account-Placeholder-Username"]"
			   class="form-control col"
			   asp-for="UserName"
			   remote />
		<span asp-validation-for="UserName"></span>
	</div>

	<div class="form-group">
		<label class="font-weight-bold"
			   asp-for="Email">
		</label>
		<span>*</span>
		<input type="text"
			   placeholder="@SharedLocalizer["Account-Placeholder-Email"]"
			   class="form-control col"
			   asp-for="Email"
			   remote />
		<span asp-validation-for="Email"></span>
	</div>

	<div class="form-group">
		<label class="font-weight-bold"
			   asp-for="Password">
		</label>
		<span>*</span>
		<input type="password"
			   placeholder="@SharedLocalizer["Account-Placeholder-Password"]"
			   class="form-control col"
			   asp-for="Password" />
		<span asp-validation-for="Password"></span>
	</div>

	<div class="form-group">
		<label class="font-weight-bold"
			   asp-for="PasswordConfirm">
		</label>
		<span>*</span>
		<input type="password"
			   placeholder="@SharedLocalizer["Account-Placeholder-PasswordConfirm"]"
			   class="form-control col"
			   asp-for="PasswordConfirm" />
		<span asp-validation-for="PasswordConfirm"></span>
	</div>

	<div class="form-group d-flex">
		<input type="submit"
			   value="@SharedLocalizer["Account-Text-Register"]"
			   class="flex-fill btn btn-success" />
	</div>

	<div class="form-group text-center">
		<a class="card-link"
		   asp-controller="Account"
		   asp-action="Login">
			@SharedLocalizer["Account-Text-Login"]
		</a>
		<span>@SharedLocalizer["Account-Span-UsingExistingAccount"]</span>
	</div>
</form>